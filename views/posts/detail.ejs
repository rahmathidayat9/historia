<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                Title : <b><%= post.title %></b>
            </div>
            <div class="card-body">
                <div class="row mb-5 mt-3">
                    <div class="col d-flex justify-content-center text-center">
                        <img style="width: 600px;object-fit: cover; object-position: center;" src="/uploads/posts/<%= post.thumbnail %>" alt="">
                    </div>
                </div>

                <%- post.body %>
            </div>
        </div>
    </div>
</div>