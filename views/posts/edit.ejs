<form id="updateForm">
    <div class="row">
        <div class="col-lg-6">
            <div class="form-group mb-3">
                <label for="">Title:</label>
                <input type="hidden" readonly class="form-control" name="id_edit" id="id_edit" value="<%= post.id %>">
                <input type="text" value="<%= post.title %>" name="title_edit" id="title_edit" class="form-control">
            </div>
            <div class="form-group mb-3">
                <label for="">Category:</label>
                <select name="category_id_edit" id="category_id_edit" class="form-control">
                    <% categories.forEach((value, index) => { %>
                        <% if(value.id == post.category_id) { %>
                            <option value="<%= value.id %>" selected><%= value.name %></option>
                        <% }else { %>
                            <option value="<%= value.id %>"><%= value.name %></option>
                        <% } %>
                    <% }) %>
                </select>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group mb-3">
                <label for="">Thumbnail:</label>
                <input type="file" name="thumbnail_edit" id="thumbnail_edit" data-default-file="/uploads/posts/<%= post.thumbnail %>" class="dropify" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group mb-3">
                <label for="">Body:</label>
                <textarea name="body_edit" id="body_edit" class="form-control summernote"><%- post.body %></textarea>
            </div>
            <div class="form-group mb-3">
                <button type="submit" class="btn btn-primary text-end">SAVE</button>
            </div>
        </div>
    </div>
    </form>